                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="30dp"
                                    android:textAlignment="center"
                                    android:textColor="#46555C"
                                    android:textFontWeight="700"
                                    android:textSize="26px" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>

                <!--   sidebar-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/sidebar"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:cardBackgroundColor="#F8F9FC"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/controls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="1dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="#E7EAF8"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Freely Control"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/paired_devices_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="Connect to devices"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/paired_devices_recycler_view"
                            android:layout_width="match_parent"
                            android:visibility="visible"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp" />
                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="31dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/available_devices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="28dp"
                            android:text="Available Devices"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/new_devices"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="20dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/available_devices" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

<!--    back_button-->

    <androidx.cardview.widget.CardView
        android:id="@+id/back_button"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_centerInParent="true"
        android:layout_marginStart="52px"
        android:layout_marginLeft="52px"
        android:foreground="@drawable/back_button_layout"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardBackgroundColor="#EEF0F6"
        app:cardCornerRadius="160dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <RelativeLayout
            android:layout_width="65px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15px"
                android:layout_height="24px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_picture_card"
        android:layout_width="85px"
        android:layout_height="85px"
        android:layout_centerInParent="true"
        android:layout_marginEnd="46px"
        android:foreground="@drawable/back_button_layout"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="160dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/hamburger"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_guest" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/hamburger"
        android:layout_width="66px"
        android:layout_height="60px"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="128px"
        android:padding="20px"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_picture_card"
        app:layout_constraintVertical_bias="0.51" />

    <ImageView
        android:id="@+id/back_to_splash_screen"
        android:layout_width="69px"
        android:layout_height="69px"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:padding="20px"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture_card"
        app:layout_constraintEnd_toStartOf="@+id/profile_picture_card"
        app:layout_constraintTop_toTopOf="@+id/profile_picture_card"
        app:srcCompat="@drawable/ic_baseline_restore_24"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>