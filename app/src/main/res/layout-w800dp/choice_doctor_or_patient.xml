<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/secondary_logo"
        android:layout_width="266.20px"
        android:layout_height="55.86px"
        android:layout_marginStart="57.24px"
        android:layout_marginLeft="83px"
        app:layout_constraintBottom_toTopOf="@+id/main_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forhealth_secondary_logo" />
    <ImageView
        android:id="@+id/back_to_splash_screen"
        android:layout_width="29px"
        android:layout_height="29px"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        app:layout_constraintBottom_toTopOf="@+id/main_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_restore_24"
        tools:ignore="VectorDrawableCompat" />
    // Main Card Layout
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="142.75px"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/physiotherapist_login_card"
                android:layout_width="505px"
                android:layout_height="662px"
                android:layout_marginLeft="382px"
                app:cardBackgroundColor="#F8F9FC"
                app:cardCornerRadius="19dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/physiotherapist_photo"
                            android:layout_width="425px"
                            android:layout_height="425px"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="92.18px"
                            android:src="@drawable/physiotherapist_photo" />

                        <TextView
                            android:id="@+id/physiotherapist_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/physiotherapist_photo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="60.07px"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Physiotherapist"
                            android:textColor="#082F6A"
                            android:textFontWeight="800"
                            android:textSize="32px" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/patient_login_card"
                android:layout_width="505px"
                android:layout_height="682px"
                android:layout_marginLeft="143px"
                app:cardBackgroundColor="#F8F9FC"
                app:cardCornerRadius="19dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/physiotherapist_login_card"
                app:layout_constraintStart_toEndOf="@+id/physiotherapist_login_card"
                app:layout_constraintTop_toTopOf="@+id/physiotherapist_login_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/patient_image"
                            android:layout_width="399px"
                            android:layout_height="425px"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="61dp"
                            android:src="@drawable/patient_photo"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Coming Soon"
                            android:textColor="#575757"
                            android:textFontWeight="800"
                            android:textSize="32px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patient_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="60.28px"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Patient"
                            android:textColor="#575757"
                            android:textFontWeight="800"
                            android:textSize="32px" />
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="62px"
                android:fontFamily="@font/raleway_bold"
                android:text="Start your journey as"
                android:textColor="#46555C"
                android:textFontWeight="700"
                android:textSize="50px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>