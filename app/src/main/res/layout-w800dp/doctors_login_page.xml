<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="266.20px"
        android:layout_height="55.86px"
        android:layout_marginStart="57.24px"
        android:layout_marginLeft="83px"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forhealth_secondary_logo" />
    <ImageView
        android:id="@+id/back_to_splash_screen"
        android:layout_width="29px"
        android:layout_height="29px"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_restore_24"
        tools:ignore="VectorDrawableCompat" />
    //MainCardLayout
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="142.75px"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/physiotherapistcard"
                    android:layout_width="505px"
                    android:layout_height="662px"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#F8F9FC"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/physio"
                                android:layout_width="425px"
                                android:layout_height="425px"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="92.18px"
                                android:src="@drawable/physiotherapist_photo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/physio"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="60.07px"
                                android:fontFamily="@font/raleway_medium"
                                android:text="Physiotherapist"
                                android:textColor="#082F6A"
                                android:textFontWeight="800"
                                android:textSize="32px"


                                />

                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    app:layout_constraintBottom_toBottomOf="@+id/physiotherapistcard"
                    app:layout_constraintStart_toEndOf="@+id/physiotherapistcard"
                    app:layout_constraintTop_toTopOf="@+id/physiotherapistcard">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/signup_button"
                        android:layout_width="505px"
                        android:layout_height="83.39px"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#EEF0F6"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="4dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:gravity="center_horizontal"
                                android:text="Register"
                                android:textAlignment="center"
                                android:textColor="#042A73"
                                android:textFontWeight="800"
                                android:textSize="30px"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/login_button"
                        android:layout_width="505px"
                        android:layout_height="83.39px"
                        android:layout_below="@+id/signup_button"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="88.96px"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="#EEF0F6"
                        app:cardCornerRadius="50dp"

                        app:cardElevation="4dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/logintxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:gravity="center_horizontal"
                                android:text="Login"
                                android:textAlignment="center"
                                android:textColor="#042A73"
                                android:textFontWeight="800"
                                android:textSize="30px"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <View
                    android:id="@+id/ellipse_104"
                    android:layout_width="19px"
                    android:layout_height="19px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/indicator_not_selected"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/ellipse_105"
                    android:layout_width="19px"
                    android:layout_height="19px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/indicator_not_selected"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_104"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:id="@+id/ellipse_106"
                    android:layout_width="19px"
                    android:layout_height="19px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/indicator_selected"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_105"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104" />

                <View
                    android:id="@+id/ellipse_107"
                    android:layout_width="19px"
                    android:layout_height="19px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/indicator_not_selected"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_106"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/back_button"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_centerInParent="true"
        android:layout_marginStart="52px"
        android:layout_marginLeft="52px"
        android:foreground="@drawable/back_button_layout"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardBackgroundColor="#EEF0F6"
        app:cardCornerRadius="160dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <RelativeLayout
            android:layout_width="65px"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15px"
                android:layout_height="24px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

