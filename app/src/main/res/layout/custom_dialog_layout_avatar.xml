<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_dialog_avatar_a"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="0dp"
        android:layout_marginLeft="20dp"
        app:cardBackgroundColor="#EEF0F6"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/idEdiAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_male"
            android:layout_margin="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_dialog_avatar_b"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="0dp"
        android:layout_marginVertical="40dp"
        app:cardBackgroundColor="#EEF0F6"
        app:cardCornerRadius="100dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/idEdiAvatar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_female_a"
            android:layout_margin="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_dialog_avatar_c"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="0dp"
        app:cardBackgroundColor="#EEF0F6"
        app:cardCornerRadius="100dp"
        android:layout_marginRight="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/idEdiAvatar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_female_b"
            android:layout_margin="15dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>