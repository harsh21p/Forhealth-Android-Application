<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/existing_user_layout"
    android:layout_width="320dp"
    android:layout_height="460dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardBackgroundColor="#F8F9FC"
    app:cardCornerRadius="19dp"
    app:cardElevation="1dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/existing_user_profile"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="#9E9B9B" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignEnd="@+id/existing_user_profile"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_baseline_delete_forever_24" />

        <TextView
            android:id="@+id/existing_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/existing_user_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/app_name"
            android:textColor="#082F6A"
            android:textFontWeight="800"
            android:textSize="30dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>